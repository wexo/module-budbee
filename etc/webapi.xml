<?xml version="1.0"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">

    <route url="/V1/wexo-budbee/get-parcel-shops" method="POST">
        <service class="Wexo\Budbee\Api\Carrier\BudbeeInterface" method="getAvailableBoxes"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route url="/V1/wexo-budbee/get-parcel-shops" method="GET">
        <service class="Wexo\Budbee\Api\Carrier\BudbeeInterface" method="getAvailableBoxes"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route url="/V1/wexo-budbee/get-budbee-boxid/:orderincrementid/:budbeeorderid" method="GET">
        <service class="Wexo\Budbee\Api\Data\GetBudbeeBoxId" method="execute"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
</routes>
